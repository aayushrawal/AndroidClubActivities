<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9"
    tools:context="com.example.maxblade.getmessage.MainActivity">

    <TextView
        android:id="@+id/macTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/res"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="20sp"
        android:gravity="center"
        android:text="  Mac Address :"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/res"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/regnum"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Registration Number"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:typeface="sans"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/regnum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />
</RelativeLayout>
